@model MyRecipes.Web.ViewModels.SearchRecipes.SearchIndexViewModel
@{
    this.ViewData["Title"] = "Search recipes by ingredients";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="List" method="get">

    <div class="row">
        @foreach (var ingredient in Model.Ingredients)
        {
            <div>
                <input id="ingredient_@ingredient.Id"
                   type="checkbox"
                   name="IngredientsIds"
                   value="@ingredient.Id"/>
                <label for="ingredient_@ingredient.Id">@ingredient.Name</label>
            </div>
        }
    </div>
    <hr />
    <button class="btn btn-primary">Search</button>
</form>
