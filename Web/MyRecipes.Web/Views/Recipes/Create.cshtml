@model MyRecipes.Web.ViewModels.Recipes.CreateRecipeInputModel
@{
    this.ViewData["Title"] = "Add new recipe";
    var categoryItems = this.Model.CategoriesItems.Select(x => new SelectListItem(x.Value, x.Key));
}


<form method="post" class="col-md-6 offset-md-3" enctype="multipart/form-data">
    <h1>Add new recipe!</h1>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Instructions"></label>
        <textarea asp-for="Instructions" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Instructions" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PreparationTime" class="form-label"></label>
        <input asp-for="PreparationTime" class="form-control">
        <span asp-validation-for="PreparationTime" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CookingTime" class="form-label"></label>
        <input asp-for="CookingTime" class="form-control">
        <span asp-validation-for="CookingTime" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PortionsCount" class="form-label"></label>
        <input asp-for="PortionsCount" class="form-control">
        <span asp-validation-for="PortionsCount" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="categoryItems"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
     <div class="mb-3">
        <label asp-for="Images" class="form-label"></label>
        <input asp-for="Images" class="form-control">
        <span asp-validation-for="Images" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Ingredients" id="IngredientsContainer"></label>
        <a class="btn btn-success" onclick="AddMoreIngredients()">Add</a>
    </div>
    <input type="submit" class="btn btn-primary" />
</form>

@section Scripts{
    <script>
        var ingredientsIndex = 0;
        function AddMoreIngredients() {
           console.log("AddMoreIngredients()");
            $("#IngredientsContainer")
                .append("<div class = 'form-control'> Name <input type='text' name='Ingredients["+ingredientsIndex+"].Name'/></div> <div class = 'form-control'>Quantity <input type='text' name='Ingredients["+ingredientsIndex+"].Quantity'/> </div>")
            ingredientsIndex ++;
        }
    </script>
}
