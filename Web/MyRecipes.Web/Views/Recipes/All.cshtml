@model MyRecipes.Web.ViewModels.Recipes.RecipeListViewModel
@{
    this.ViewData["Title"] = "All Recipes, page " + Model.PageNumber;
}

<h1>@this.ViewData["Title"]</h1>
<hr />
<div class="row">
@foreach (var recipe in this.Model.Recipes)
{
    <div class="media col-md-4">
        <img class="mr-3" src="@recipe.ImageUrl" width="100" alt="Generic placeholder image">
        <div class="media-body">
                <h5 class="mt-0"> <a asp-action="SingleRecipe" asp-route-id="@recipe.Id">@recipe.Name</a></h5>
            @recipe.CategoryName
        </div>
    </div>
}
</div>
<hr />
<partial name="_PagingPartial" model="@Model" />